{
    "php.version": "7.4",
    "php.format.codeStyle": "Allman",
    "php.files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/vendor": true
    },
    // --- DocBlocker settings ---
    "php-docblocker.qualifyClassNames": true,
    "php-docblocker.useShortNames": false,
    "php-docblocker.alignParams": true,
    "php-docblocker.alignReturn": true,
    "php-docblocker.gap": false
}